		int c = 0;
		
		while(c == 0){
			try{
				System.out.println("Enter an integer: ");
				int x = input.nextInt();
				System.out.println("Thanks for your input " + x);
				c++;
			}catch(InputMismatchException e){
				System.out.println("Pease enter an integer you fool!!");
				System.out.println("Enter anotha1");
				//int x = input.nextInt();
				c = 0;
			}
			
		}
		
		
		
		input.close();
		
		
		
